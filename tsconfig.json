{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"]
	},
	"include": [
		"src/**/*.ts",
		"index.ts",
		"tests/**/*.ts",
		"vitest.config.ts",
		"playwright.config.ts",
		"tsup.config.ts",
		"examples/**/*.ts"
	],
	"exclude": ["dist", "node_modules"]
}
